
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Choose your fav list <%=gown.title%></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_for [User.last, @fav] do |f| %>
          <div class="mb-3">
        
            <%= f.label :name, class: "col-form-label" %> 
            <%= f.collection_select :id, @list, :id, :name, {prompt: true}, {class: "form-select"} %>
          
          </div>
          <hr>
        <div class="mb-3">
          <%= f.label :add, class: "col-form-label" %>  
          <%= f.text_field :name, class: "form-control" %>
          <%= f.hidden_field :gown_id, :value => gown.id %>
        </div>
  
 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    
        <%= f.submit "Add to the list", class: "btn btn-primary" %>
      
        <% end %>
      </div>

    </div>
  </div>
</div>