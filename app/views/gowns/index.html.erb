<h1> GOWNS </h1>

<% @gowns.each do |gown| %>
    <h3> <%= gown.title %> </h3>
    <h5> Colour: <%= gown.colour %> </h5>
    <h5> Size: <%= gown.size %> </h5>
    <div> <%= link_to image_tag("straight_purple.JPG", width:'90px'), gown_path(gown.id) %> </div>

    
    <p><%= link_to "Edit", edit_gown_path(gown.id) %>
    <%= link_to "Delete", gown_path(gown.id), method: :delete, data: {confirm: "Are you sure?"}  %> 
    <%= link_to "Add New Gown", new_gown_path %> 
    <%= link_to "Modify Gown", gown_path(gown.id) %> </p>
    <div> <%= link_to "Back to Home", root_url %> </div>
<%end%>